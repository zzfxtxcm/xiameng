%script{src: "http://api.map.baidu.com/api?v=2.0&ak=NXagVEyXSs6AmnrCNXl7pKHo", type: "text/javascript"}
.container
  .pr_title.pull-left.mb10
    %h2.pull-left
      = @new_home.name
    %input.btn.pull-left.mt20.f12.ml10{style: " background:#f65c52; color:#FFF", type: "button", value: "在售"}/
    %p.pull-left.pt30.pl10 (项目名称:#{@new_home.name})
  .clearfix
  .prnav
    .pull-left{style: "background: url(#{asset_path 'bootstrap/prt.gif'}); height: 40px; width: 104px;"}
      = link_to "楼盘首页", new_home_path(@new_home.id), :class => "ml10", :style => "padding: 0"
    .pull-left{style: "background: url(#{asset_path 'bootstrap/prt1.gif'}); height:40px; width: 1066px; background-repeat: repeat-x"}
      = link_to "项目介绍", new_home_path(@new_home.id, :type => "introduce")
      = link_to "户型图", new_home_path(@new_home.id, :type => "apartment")
      = link_to "销售动态", new_home_path(@new_home.id, :type => "new")
      %a{href: "#"} 价格行情
      %a{href: "#"} 交通配套
      = link_to "楼盘相册", new_home_path(@new_home.id, :type => "album")
  - type = params[:type]
  - if type == "apartment"
    = render "apartment"
  - elsif type == "new"
    = render "new"
  - elsif type == "album"
    = render "album"
  - elsif type == "introduce"
    = render "introduce"    
  - else
    = render "index"
/ con end

:javascript
  // 百度地图API功能
  var map = new BMap.Map("property-map");
  var point = new BMap.Point(#{@new_home.map_address});
  map.centerAndZoom(point,16);
  map.enableScrollWheelZoom();
  var marker1 = new BMap.Marker(point);
  map.addOverlay(marker1);
  var infoWindow1 = new BMap.InfoWindow("#{@new_home.name} - #{@new_home.project_address}");
  marker1.addEventListener("click", function(){this.openInfoWindow(infoWindow1);});
  map.addControl(new BMap.NavigationControl({anchor: BMAP_ANCHOR_TOP_RIGHT, type: BMAP_NAVIGATION_CONTROL_SMALL}));
