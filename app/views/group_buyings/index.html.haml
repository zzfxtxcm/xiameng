  / 左边
  .pull-left{style: "width:907px;"}
    :javascript
      $(function() {
      		jQuery('.marquee').kxbdSuperMarquee({
      		  distance:850,
      		  time:4,
      		  navId:'#mar3Nav',
      		  direction:'left'
